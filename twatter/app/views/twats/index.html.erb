<p id="notice"><%= notice %></p>

<h1>Twats</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @twats.each do |twat| %>
      <tr>
        <td><%= twat.content %></td>
        <td><%= twat.user %></td>
        <td><%= link_to 'Show', twat %></td>
        <td><%= link_to 'Edit', edit_twat_path(twat) %></td>
        <td><%= link_to 'Destroy', twat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Twat', new_twat_path %>
